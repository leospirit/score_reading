    <script>
        // Fluency Modal Tab Logic
        function switchFluencyTab(tabName) {
            // Update Tab Buttons
            document.querySelectorAll('.modal-tabs .tab-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            // Update Content
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            document.getElementById(`tab-${tabName}`).classList.add('active');
            
            // Re-render chart if switching to Pace tab (to ensure correct size)
            if (tabName === 'pace' && paceChartInstance) {
                paceChartInstance.resize();
            }
        }
        
        // Fluency Modal
        let paceChartInstance = null;
        
        function openFluencyModal() {
            document.getElementById('fluencyModal').classList.add('active');
            document.body.style.overflow = 'hidden';
            
            // Initialize Pace Chart if not already (Lazy Load)
            if (!paceChartInstance && document.getElementById('paceChart')) {
                initPaceChart();
            }
        }

        function closeFluencyModal() {
            document.getElementById('fluencyModal').classList.remove('active');
            document.body.style.overflow = '';
        }
        
        function initPaceChart() {
            const ctx = document.getElementById('paceChart').getContext('2d');
            
            // Parse Pace Data
            const rawData = {{ pac_chart_data | default(pace_chart_data) | tojson | default('[]') }}; 
            
            // Custom Plugin to draw the "Natural Zone" background
            const naturalZonePlugin = {
                id: 'naturalZone',
                beforeDraw: (chart) => {
                    const { ctx, chartArea: { top, bottom, left, right }, scales: { y } } = chart;
                    const yHigh = y.getPixelForValue(150);
                    const yLow = y.getPixelForValue(100);
                    
                    ctx.save();
                    ctx.fillStyle = 'rgba(76, 175, 80, 0.15)'; // Light Green
                    ctx.fillRect(left, yHigh, right - left, yLow - yHigh);
                    
                    // Add Text Labels
                    ctx.fillStyle = '#4CAF50';
                    ctx.font = '10px Roboto';
                    ctx.textAlign = 'right';
                    ctx.fillText('Natural Pace', right - 10, yHigh + 15);
                    
                    ctx.restore();
                }
            };

            paceChartInstance = new Chart(ctx, {
                type: 'line',
                data: {
                    datasets: [{
                        label: 'WPM (Words Per Minute)',
                        data: rawData,
                        borderColor: '#2979FF',
                        backgroundColor: '#2979FF',
                        borderWidth: 2,
                        tension: 0.4, // Smooth curve
                        pointRadius: 4,
                        pointBackgroundColor: '#2979FF'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 200,
                            title: { display: true, text: 'WPM' },
                            grid: { display: false } // Cleaner look
                        },
                        x: {
                            type: 'linear',
                            title: { display: true, text: 'Time (s)' },
                            grid: { display: false },
                            ticks: { stepSize: 2 }
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.raw.y + ' wpm';
                                }
                            }
                        }
                    }
                },
                plugins: [naturalZonePlugin]
            });
        }
    </script>
